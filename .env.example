# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend & Auth
FRONTEND_URL="http://localhost:3000"
BETTER_AUTH_URL="http://localhost:3001/api/auth"
BETTER_AUTH_SECRET="your-better-auth-secret-key-min-32-chars" # Generate with: openssl rand -base64 32

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/podnex?schema=public"
MONGODB_URI="your-mongodb-uri" # Legacy/Prototype

# AI Services
OPENAI_API_KEY="sk-..."
ELEVENLABS_API_KEY="sk-..."
UNREAL_SPEECH_API_KEY="your-unreal-speech-key"

# TTS Configuration
TTS_PROVIDER="unreal" # Options: 'unreal', 'elevenlabs'

# AWS / Storage (S3 or R2)
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="podnext-audio-storage"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Webhooks & Security
API_KEYS="your-internal-api-key"
WEBHOOK_URL="http://localhost:3099/webhook"
WEBHOOK_SECRET="your-webhook-secret"

# Redis (for Queue)
REDIS_URL="redis://localhost:6379"
